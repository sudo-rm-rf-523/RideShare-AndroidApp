<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_payment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="sudo_rm_rf.rideshare.PaymentActivity"
>

    <TextView
        android:layout_marginTop="15dp"
        android:id="@+id/owe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "You owe Hannah"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@android:color/black"/>

    <TextView
        android:layout_marginTop="15dp"
        android:layout_below="@+id/owe"
        android:id="@+id/dollars"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text = "$10"
        android:textSize="50sp"
        android:textColor="@android:color/black"/>

    <TextView
        android:layout_marginTop="15dp"
        android:layout_below="@+id/owe"
        android:layout_toRightOf="@+id/dollars"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "69"
        android:textSize="40sp"
        android:textColor="@android:color/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dollars"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="15dp"
            android:id="@+id/choose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "Choose a Payment Method"
            android:textSize="20sp"
            android:textColor="@android:color/black"/>

        <Button
            android:layout_width="250dp"
            android:id="@+id/paybycash"
            android:layout_height="40dp"
            android:text="Record a Cash Payment"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:background="@android:color/black"
            android:layout_marginTop="20dp"
            android:textAllCaps="false"/>

        <Button
            android:layout_width="250dp"
            android:id="@+id/venmo"
            android:layout_height="40dp"
            android:background="@drawable/venmo2"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:textAllCaps="false"/>

        <Button
            android:layout_width="250dp"
            android:id="@+id/paypal"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:textAllCaps="false"
            android:layout_gravity="center"
            android:background="@drawable/venmo3"/>



    </LinearLayout>

</RelativeLayout>
